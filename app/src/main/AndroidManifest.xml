<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for Supabase API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Storage permissions for profile picture upload -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EcoSwap"
        android:usesCleartextTraffic="true">
        
        <!-- Main entry point -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Authentication Activities -->
        <activity
            android:name=".auth.LoginActivity"
            android:exported="false" />
        
        <activity
            android:name=".auth.RegisterActivity"
            android:exported="false" />
        
        <activity
            android:name=".auth.VerifyEmailActivity"
            android:exported="false" />
        
        <activity
            android:name=".auth.UserProfileActivity"
            android:exported="false" />
        
        <!-- User Profile Viewer (for viewing other users' profiles) -->
        <activity
            android:name=".UserProfileActivity"
            android:exported="false" />
        

        
        <!-- Dashboard Activities -->
        <activity
            android:name=".dashboard.DashboardActivity"
            android:exported="false" />
        
        <activity
            android:name=".dashboard.PostDetailActivity"
            android:exported="false" />
        
        <activity
            android:name=".market.SwapActivity"
            android:exported="false" />
        
        <activity
            android:name=".market.DonationActivity"
            android:exported="false" />
        
        <activity
            android:name=".market.BiddingActivity"
            android:exported="false" />
        
        <activity
            android:name=".market.BidDetailActivity"
            android:exported="false" />
        
        <!-- Tracker Activity -->
        <activity
            android:name=".tracker.EcoTrackerActivity"
            android:exported="false" />
        
        <!-- Settings Activity -->
        <activity
            android:name=".settings.SettingsActivity"
            android:exported="false" />
        
    </application>

</manifest>