<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Avatar with Online Status -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/background_light">

                <TextView
                    android:id="@+id/tvAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="JD"
                    android:textColor="@color/primary_green"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_circle_white" />

            </androidx.cardview.widget.CardView>

            <!-- Online Status Indicator -->
            <View
                android:id="@+id/onlineIndicator"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_online_indicator"
                android:visibility="gone" />

            <!-- Unread Badge -->
            <TextView
                android:id="@+id/tvUnreadBadge"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="top|end"
                android:background="@drawable/bg_badge"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Message Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">

            <!-- Name and Timestamp Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sarah Martinez"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tvTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2m ago"
                    android:textColor="@color/text_hint"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Message Preview -->
            <TextView
                android:id="@+id/tvMessagePreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hey! Is the vintage desk lamp still available?"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp" />

            <!-- Item Context (Optional - for swap/listing related chats) -->
            <LinearLayout
                android:id="@+id/itemContextLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:padding="6dp"
                android:background="@drawable/bg_item_context"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_swap"
                    app:tint="@color/primary_green" />

                <TextView
                    android:id="@+id/tvItemContext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vintage Desk Lamp"
                    android:textColor="@color/primary_green"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Chevron Icon -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="@color/text_hint"
            android:contentDescription="Open chat" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
