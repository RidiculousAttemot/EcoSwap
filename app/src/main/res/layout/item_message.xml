<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Avatar Container -->
    <FrameLayout
        android:id="@+id/avatarContainer"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/background_light">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/chat_title"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="JD"
                android:textColor="@color/primary_green"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/bg_circle_placeholder"
                tools:ignore="HardcodedText" />

        </androidx.cardview.widget.CardView>

        <!-- Online Status Indicator -->
        <View
            android:id="@+id/onlineIndicator"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/bg_online_indicator"
            android:visibility="gone"
            tools:visibility="visible" />
    </FrameLayout>

    <!-- User Name -->
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sarah Martinez"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/avatarContainer"
        app:layout_constraintEnd_toStartOf="@id/tvTimestamp"
        app:layout_constraintTop_toTopOf="@id/avatarContainer"
        tools:ignore="HardcodedText" />

    <!-- Timestamp -->
    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2m ago"
        android:textColor="@color/text_hint"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvUserName"
        app:layout_constraintBottom_toBottomOf="@id/tvUserName"
        tools:ignore="HardcodedText" />

    <!-- Message Preview -->
    <TextView
        android:id="@+id/tvMessagePreview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hey! Is the vintage desk lamp still available?"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/tvUserName"
        app:layout_constraintEnd_toStartOf="@id/tvUnreadBadge"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        tools:ignore="HardcodedText" />

    <!-- Unread Badge -->
    <TextView
        android:id="@+id/tvUnreadBadge"
        android:layout_width="wrap_content"
        android:minWidth="20dp"
        android:layout_height="20dp"
        android:background="@drawable/bg_badge"
        android:gravity="center"
        android:paddingHorizontal="6dp"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvMessagePreview"
        app:layout_constraintBottom_toBottomOf="@id/tvMessagePreview"
        tools:ignore="HardcodedText"
        tools:visibility="visible" />


    <!-- Item Context Tag -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/itemContextLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/background_light"
        app:strokeColor="@color/border_light"
        app:strokeWidth="1dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/tvUserName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMessagePreview"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="6dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgItemContext"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.EcoSwap.CornerSize15Percent"
                tools:visibility="visible"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/tvItemContext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vintage Desk Lamp"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

