<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/card_margin_horizontal"
    android:layout_marginEnd="@dimen/card_margin_horizontal"
    android:layout_marginTop="@dimen/card_margin_vertical"
    android:layout_marginBottom="@dimen/card_margin_vertical"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_padding">

        <!-- Avatar Container -->
        <FrameLayout
            android:id="@+id/avatarContainer"
            android:layout_width="@dimen/avatar_medium"
            android:layout_height="@dimen/avatar_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="28dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/background_light">

                <TextView
                    android:id="@+id/tvAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="JD"
                    android:textColor="@color/primary_green"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_circle_white"
                    tools:ignore="HardcodedText" />

            </androidx.cardview.widget.CardView>

            <!-- Online Status Indicator -->
            <View
                android:id="@+id/onlineIndicator"
                android:layout_width="@dimen/indicator_size"
                android:layout_height="@dimen/indicator_size"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_online_indicator"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Unread Badge -->
            <TextView
                android:id="@+id/tvUnreadBadge"
                android:layout_width="@dimen/badge_size"
                android:layout_height="@dimen/badge_size"
                android:layout_gravity="top|end"
                android:background="@drawable/bg_badge"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_caption"
                android:textStyle="bold"
                android:visibility="gone"
                tools:ignore="HardcodedText"
                tools:visibility="visible" />

        </FrameLayout>

        <!-- User Name -->
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sarah Martinez"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_body_large"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/spacing_m"
            android:layout_marginEnd="@dimen/spacing_s"
            app:layout_constraintStart_toEndOf="@id/avatarContainer"
            app:layout_constraintEnd_toStartOf="@id/tvTimestamp"
            app:layout_constraintTop_toTopOf="@id/avatarContainer"
            app:layout_constraintHorizontal_bias="0"
            tools:ignore="HardcodedText" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2m ago"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/text_size_caption"
            android:layout_marginEnd="@dimen/spacing_s"
            app:layout_constraintEnd_toStartOf="@id/chevronIcon"
            app:layout_constraintTop_toTopOf="@id/tvUserName"
            app:layout_constraintBottom_toBottomOf="@id/tvUserName"
            tools:ignore="HardcodedText" />

        <!-- Message Preview -->
        <TextView
            android:id="@+id/tvMessagePreview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hey! Is the vintage desk lamp still available?"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_body"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/spacing_xs"
            android:layout_marginEnd="@dimen/spacing_s"
            app:layout_constraintStart_toStartOf="@id/tvUserName"
            app:layout_constraintEnd_toStartOf="@id/chevronIcon"
            app:layout_constraintTop_toBottomOf="@id/tvUserName"
            tools:ignore="HardcodedText" />

        <!-- Item Context Tag -->
        <LinearLayout
            android:id="@+id/itemContextLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_s"
            android:paddingStart="@dimen/spacing_s"
            android:paddingEnd="@dimen/spacing_s"
            android:paddingTop="@dimen/spacing_xs"
            android:paddingBottom="@dimen/spacing_xs"
            android:background="@drawable/bg_item_context"
            android:gravity="center_vertical"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/tvUserName"
            app:layout_constraintTop_toBottomOf="@id/tvMessagePreview"
            tools:visibility="visible">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_swap"
                app:tint="@color/primary_green"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/tvItemContext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vintage Desk Lamp"
                android:textColor="@color/primary_green"
                android:textSize="@dimen/text_size_caption"
                android:layout_marginStart="@dimen/spacing_xs"
                android:maxLines="1"
                android:ellipsize="end"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Chevron Icon -->
        <ImageView
            android:id="@+id/chevronIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="@color/text_hint"
            android:contentDescription="Open chat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
