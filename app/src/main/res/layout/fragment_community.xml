<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:elevation="4dp"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Community"
                android:textColor="@color/primary_green"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share your swap experiences and eco stories"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="16dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/etSearchPosts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search posts..."
                android:padding="12dp"
                android:background="@drawable/bg_edit_text"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawablePadding="8dp" />

        </LinearLayout>

        <!-- Category Filters -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:background="@color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:id="@+id/categoryChipsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAllPosts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Posts"
                    android:textColor="@color/white"
                    android:checkable="true"
                    android:checked="true"
                    app:chipBackgroundColor="@color/primary_green"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSwapStories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Swap Stories"
                    android:textColor="@color/text_primary"
                    android:checkable="true"
                    app:chipBackgroundColor="@color/chip_electronics"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDonations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donations"
                    android:textColor="@color/text_primary"
                    android:checkable="true"
                    app:chipBackgroundColor="@color/chip_clothing"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eco Tips"
                    android:textColor="@color/text_primary"
                    android:checkable="true"
                    app:chipBackgroundColor="@color/chip_furniture"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipQuestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Questions"
                    android:textColor="@color/text_primary"
                    android:checkable="true"
                    app:chipBackgroundColor="@color/chip_books"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Posts RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCommunityPosts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false" />

    </LinearLayout>

    <!-- Floating Action Button for Creating Posts -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCreatePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@drawable/ic_add"
        android:contentDescription="Create Post"
        app:tint="@color/white"
        app:backgroundTint="@color/primary_green"
        app:elevation="6dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
