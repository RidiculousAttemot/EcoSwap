<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Back Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/primary_green">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/spacing_l"
                android:paddingBottom="@dimen/spacing_xxl">

                <!-- Back Button -->
                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/spacing_l"
                    android:layout_marginBottom="@dimen/spacing_l"
                    android:src="@android:drawable/ic_menu_revert"
                    android:padding="@dimen/spacing_s"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/white"
                    android:contentDescription="Back" />

                <!-- Profile Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingStart="@dimen/spacing_xxl"
                    android:paddingEnd="@dimen/spacing_xxl">

                    <!-- Avatar -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/avatar_xlarge"
                        android:layout_height="@dimen/avatar_xlarge"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@color/white">

                        <TextView
                            android:id="@+id/tvAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_circle_white"
                            android:gravity="center"
                            android:text="@string/profile_avatar_placeholder"
                            android:textColor="@color/primary_green"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                    </androidx.cardview.widget.CardView>

                    <!-- Name -->
                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_name_placeholder"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_title_large"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/spacing_l"
                        tools:ignore="HardcodedText" />

                    <!-- Location -->
                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_location_placeholder"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_body_large"
                        android:layout_marginTop="@dimen/spacing_s"
                        android:alpha="0.9"
                        tools:ignore="HardcodedText" />

                    <!-- Member Since -->
                    <TextView
                        android:id="@+id/tvMemberSince"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_member_since_placeholder"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_body"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:alpha="0.8"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Stats Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_l"
            android:paddingStart="@dimen/spacing_l"
            android:paddingEnd="@dimen/spacing_l"
            android:paddingBottom="@dimen/spacing_s">

            <!-- Swaps Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_s"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/icon_large"
                        android:layout_height="@dimen/icon_large"
                        android:src="@drawable/ic_swap"
                        app:tint="@color/primary_green"
                        android:contentDescription="Swaps" />

                    <TextView
                        android:id="@+id/tvSwapsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_stat_placeholder"
                        android:textColor="@color/primary_green"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/spacing_s"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Swaps"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_caption"
                        android:layout_marginTop="@dimen/spacing_xxs" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Rating Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_s"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_rating_value_placeholder"
                        android:textColor="@color/primary_blue"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/spacing_s"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tvReviewCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_review_count_placeholder"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_caption"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Bio Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/bioCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_l"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/white"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_l">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_body_large"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_s" />

                <TextView
                    android:id="@+id/tvBio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:text="@string/profile_about_placeholder"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_body"
                    android:lineSpacingExtra="4dp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_l">

            <Button
                android:id="@+id/btnMessage"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_large"
                android:layout_weight="1"
                android:text="Message"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_body_large"
                android:textAllCaps="false"
                android:backgroundTint="@color/primary_green"
                android:layout_marginEnd="@dimen/spacing_s"
                android:drawableStart="@drawable/ic_chat"
                android:drawableTint="@color/white"
                android:paddingStart="@dimen/spacing_l"
                android:paddingEnd="@dimen/spacing_l"
                style="@style/Widget.MaterialComponents.Button" />

            <Button
                android:id="@+id/btnViewListings"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_large"
                android:layout_weight="1"
                android:text="View Listings"
                android:textColor="@color/primary_green"
                android:textSize="@dimen/text_size_body_large"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/spacing_s"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/primary_green" />

        </LinearLayout>

        <!-- Recent Activity Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_l"
            android:layout_marginEnd="@dimen/spacing_l"
            android:layout_marginBottom="@dimen/spacing_l"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_l">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Activity"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_body_large"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_m" />

                <TextView
                    android:id="@+id/tvRecentActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No recent activity to display"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/text_size_body"
                    android:gravity="center"
                    android:padding="@dimen/spacing_l" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
